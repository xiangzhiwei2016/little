<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fengdu.dao.TStoreDao">

    <resultMap type="com.fengdu.entity.TStoreEntity" id="tStoreMap">
        <result property="id" column="id"/>
        <result property="merchantId" column="merchant_id"/>
        <result property="merchantName" column="merchant_name"/>
        <result property="mainBusiness" column="main_business"/>
        <result property="address" column="address"/>
        <result property="phoneNo" column="phone_no"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyTime" column="modify_time"/>
        <result property="creator" column="creator"/>
        <result property="modifier" column="modifier"/>
        <result property="lng" column="lng"/>
        <result property="lat" column="lat"/>
        
    </resultMap>

	<select id="queryObject" resultType="com.fengdu.entity.TStoreEntity">
		select
			 s.`lng`,
			 s.`lat`,
			 s.`id`,
 			 s.`merchant_id`,
 			 m.`merchant_name`,
  			 s.`main_business`,
 			 s.`address`,
 			 s.`phone_no`,
 			 s.`create_time`,
 			 s.`modify_time`,
 			 s.`creator`,
 			 s.`modifier` 
		from t_store s,t_merchant m
		WHERE s.merchant_id = m.id and s.id = #{id}
	</select>

	<select id="queryList" resultType="com.fengdu.entity.TStoreEntity">
		select
    		 s.`id`,
    		 s.`lng`,
			 s.`lat`,
 			 s.`merchant_id`,
 			 m.`merchant_name`,
  			 s.`main_business`,
 			 s.`address`,
 			 s.`phone_no`,
 			 s.`create_time`,
 			 s.`modify_time`,
 			 s.`creator`,
 			 s.`modifier` 
		from t_store s,t_merchant m
		WHERE s.merchant_id = m.id
		<if test="merchantId != null">
			AND s.merchant_id = #{merchantId}
		</if>
		  <if test="name != null and name.trim() != ''">
            AND m.`merchant_name` LIKE concat('%',#{name},'%')
        </if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by s.id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_store
		WHERE 1=1
        <if test="merchantId != null">
			AND merchant_id = #{merchantId}
		</if>
	</select>
	 
	<insert id="save" parameterType="com.fengdu.entity.TStoreEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_store(
			`lng`,
			`lat`,
			`merchant_id`,
			`main_business`,
			`address`,
			`phone_no`,
			`create_time`,
			`modify_time`,
			`creator`,
			`modifier`)
		values(
			#{lng},
			#{lat},
			#{merchantId},
			#{mainBusiness},
			#{address},
			#{phoneNo},
			#{createTime},
			#{modifyTime},
			#{creator},
			#{modifier})
	</insert>
	 
	<update id="update" parameterType="com.fengdu.entity.TStoreEntity">
		update t_store 
		<set>
			<if test="lng != null">`lng` = #{lng}, </if>
			<if test="lat != null">`lat` = #{lat}, </if>
			<if test="merchantId != null">`merchant_id` = #{merchantId}, </if>
			<if test="mainBusiness != null">`main_business` = #{mainBusiness}, </if>
			<if test="address != null">`address` = #{address}, </if>
			<if test="phoneNo != null">`phone_no` = #{phoneNo}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="modifyTime != null">`modify_time` = #{modifyTime}, </if>
			<if test="creator != null">`creator` = #{creator}, </if>
			<if test="modifier != null">`modifier` = #{modifier}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_store where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_store where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>