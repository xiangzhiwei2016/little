<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fengdu.dao.TCaseDao">

    <resultMap type="com.fengdu.entity.TCaseEntity" id="tCaseMap">
        <result property="id" column="id"/>
        <result property="merchantId" column="merchant_id"/>
        <result property="caseName" column="case_name"/>
        <result property="address" column="address"/>
        <result property="area" column="area"/>
        <result property="style" column="style"/>
        <result property="products" column="products"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyTime" column="modify_time"/>
        <result property="creator" column="creator"/>
        <result property="modifier" column="modifier"/>
        <result property="imgUrl" column="img_url"/>
    </resultMap>

	<select id="queryObject" resultType="com.fengdu.entity.TCaseEntity">
		select
			c.`id`,
			c.`case_name`,
			c.`address`,
			c.`area`,
			c.`style`,
			c.`products`,
			c.`create_time`,
			c.`modify_time`,
			c.`creator`,
			c.`modifier`,
			c.img_url
		from t_case c,t_merchant m
		where c.merchant_id = m.id and c.id = #{id}
	</select>

	<select id="queryList" resultType="com.fengdu.entity.TCaseEntity">
		select
			c.`id`,
			c.`case_name`,
			c.`address`,
			c.`area`,
			c.`style`,
			c.`products`,
			c.`create_time`,
			c.`modify_time`,
			c.`creator`,
			c.`modifier`,
			c.img_url
		from t_case c,t_merchant m
		WHERE c.merchant_id = m.id 
		<if test="name != null and name.trim() != ''">
			AND c.case_name LIKE concat('%',#{name},'%')
		</if>
		<if test="merchantId != null">
			AND c.merchant_id = #{merchantId}
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by c.id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*)
		from t_case c,t_merchant m
		WHERE c.merchant_id = m.id 
        <if test="name != null and name.trim() != ''">
            AND c.case_name LIKE concat('%',#{name},'%')
        </if>
        <if test="merchantId != null">
			AND c.merchant_id = #{merchantId}
		</if>
	</select>
	 
	<insert id="save" parameterType="com.fengdu.entity.TCaseEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_case(
			`case_name`,
			`address`,
			`area`,
			`style`,
			`products`,
			`create_time`,
			`modify_time`,
			`creator`,
			 img_url,
			 merchant_id,
			`modifier`)
		values(
			#{caseName},
			#{address},
			#{area},
			#{style},
			#{products},
			#{createTime},
			#{modifyTime},
			#{creator},
			#{imgUrl},
			#{merchantId},
			#{modifier})
	</insert>
	 
	<update id="update" parameterType="com.fengdu.entity.TCaseEntity">
		update t_case 
		<set>
			<if test="caseName != null">`case_name` = #{caseName}, </if>
			<if test="address != null">`address` = #{address}, </if>
			<if test="area != null">`area` = #{area}, </if>
			<if test="style != null">`style` = #{style}, </if>
			<if test="products != null">`products` = #{products}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="modifyTime != null">`modify_time` = #{modifyTime}, </if>
			<if test="creator != null">`creator` = #{creator}, </if>
			<if test="modifier != null">`modifier` = #{modifier},</if>
			<if test="imgUrl != null">`img_url` = #{imgUrl}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_case where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_case where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>