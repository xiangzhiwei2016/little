<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fengdu.dao.TCampaignTypeDao">

    <resultMap type="com.fengdu.entity.TCampaignTypeEntity" id="tCampaignTypeMap">
        <result property="id" column="id"/>
        <result property="merchantId" column="merchant_id"/>
        <result property="name" column="name"/>
        <result property="rule" column="rule"/>
        <result property="status" column="status"/>
        <result property="description" column="description"/>
        <result property="effectTime" column="effect_time"/>
        <result property="expiryTime" column="expiry_time"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyTime" column="modify_time"/>
        <result property="creator" column="creator"/>
        <result property="modifier" column="modifier"/>
        <result property="type" column="type"/>
        <result property="deposit" column="deposit"/>
        <result property="discount" column="discount"/>
        <result property="group" column="grouper"/>
        <result property="moneyFull" column="money_full"/>
        <result property="moneyBack" column="money_back"/>
          <result property="gift" column="gift"/>
    </resultMap>

	<select id="queryObject" resultType="com.fengdu.entity.TCampaignTypeEntity">
		select
			`id`,
			`merchant_id`,
			`name`,
			`rule`,
			`status`,
			`description`,
			`effect_time`,
			`expiry_time`,
			`create_time`,
			`modify_time`,
			`creator`,
			`modifier`,
			`type`,
			`deposit`,
			`discount`,
			`grouper`,
			`money_full`,
			`money_back`,
			`gift`
		from t_campaign_type
		where id = #{id}
	</select>

	<select id="queryList" resultType="com.fengdu.entity.TCampaignTypeEntity">
		select
    		`id`,
    		`merchant_id`,
    		`name`,
    		`rule`,
    		`status`,
    		`description`,
    		`effect_time`,
    		`expiry_time`,
    		`create_time`,
    		`modify_time`,
    		`creator`,
    		`modifier`,
    		`type`,
			`deposit`,
			`discount`,
			`grouper`,
			`money_full`,
			`money_back`,
			`gift`
		from t_campaign_type
		WHERE 1=1
		<if test="name != null and name.trim() != ''">
			AND name LIKE concat('%',#{name},'%')
		</if>
		<if test="merchantId != null">
			AND merchant_id = #{merchantId}
		</if>
		<if test="type != null">
			AND type = #{type}
		</if>
		<if test="status != null">
			AND status = #{status}
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_campaign_type
		WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
        <if test="merchantId != null">
			AND merchant_id = #{merchantId}
		</if>
	</select>
	 
	<insert id="save" parameterType="com.fengdu.entity.TCampaignTypeEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_campaign_type(
			`merchant_id`,
			`name`,
			`rule`,
			`status`,
			`description`,
			`effect_time`,
			`expiry_time`,
			`create_time`,
			`modify_time`,
			`creator`,
			`modifier`,
			`type`,
			`deposit`,
			`discount`,
			`grouper`,
			`money_full`,
			`money_back`,
			`gift`)
		values(
			#{merchantId},
			#{name},
			#{rule},
			#{status},
			#{description},
			#{effectTime},
			#{expiryTime},
			#{createTime},
			#{modifyTime},
			#{creator},
			#{modifier},
			#{type},
			#{deposit},
			#{discount},
			#{group},
			#{moneyFull},
			#{moneyBack},
			#{gift})
	</insert>
	 
	<update id="update" parameterType="com.fengdu.entity.TCampaignTypeEntity">
		update t_campaign_type 
		<set>
			<if test="merchantId != null">`merchant_id` = #{merchantId}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="rule != null">`rule` = #{rule}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="description != null">`description` = #{description}, </if>
			<if test="effectTime != null">`effect_time` = #{effectTime}, </if>
			<if test="expiryTime != null">`expiry_time` = #{expiryTime}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="modifyTime != null">`modify_time` = #{modifyTime}, </if>
			<if test="creator != null">`creator` = #{creator}, </if>
			<if test="modifier != null">`modifier` = #{modifier},</if>
			<if test="description != null">`type` = #{type}, </if>
			<if test="effectTime != null">`deposit` = #{deposit}, </if>
			<if test="expiryTime != null">`discount` = #{discount}, </if>
			<if test="createTime != null">`grouper` = #{group}, </if>
			<if test="modifyTime != null">`money_full` = #{moneyFull}, </if>
			<if test="creator != null">`money_back` = #{moneyBack}, </if>
			<if test="modifier != null">`gift` = #{gift}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_campaign_type where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_campaign_type where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>