<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fengdu.dao.TImageDao">

    <resultMap type="com.fengdu.entity.TImageEntity" id="tImageMap">
        <result property="id" column="id"/>
        <result property="merchantId" column="merchant_id"/>
         <result property="ikey" column="ikey"/>
        <result property="type" column="type"/>
        <result property="name" column="name"/>
        <result property="imgUrl" column="img_url"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyTime" column="modify_time"/>
        <result property="creator" column="creator"/>
        <result property="modifier" column="modifier"/>
    </resultMap>

	<select id="queryObject" resultType="com.fengdu.entity.TImageEntity">
		select
		merchant_id,
			`id`,
			`ikey`,
			`type`,
			`name`,
			`img_url`,
			`create_time`,
			`modify_time`,
			`creator`,
			`modifier`
		from t_image
		where id = #{id}
	</select>

	<select id="queryList" resultType="com.fengdu.entity.TImageEntity">
		select
    		`id`,
    		`merchant_id`,
    		`ikey`,
    		`type`,
    		`name`,
    		`img_url`,
    		`create_time`,
    		`modify_time`,
    		`creator`,
    		`modifier`
		from t_image
		WHERE 1=1
		<if test="name != null and name.trim() != ''">
			AND name LIKE concat('%',#{name},'%')
		</if>
		<if test="ikey != null">
			AND `ikey` = #{ikey}
		</if>
		<if test="type != null and type.trim() != ''">
			AND `type` = #{type}
		</if>
		<if test="merchantId != null">
			AND `merchant_id` = #{merchantId}
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_image
		WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
        <if test="ikey != null">
			AND `ikey` = #{ikey}
		</if>
		<if test="type != null and type.trim() != ''">
			AND `type` = #{type}
		</if>
		<if test="merchantId != null">
			AND `merchant_id` = #{merchantId}
		</if>
	</select>
	 
	<insert id="save" parameterType="com.fengdu.entity.TImageEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_image(
			merchant_id,
			`ikey`,
			`type`,
			`name`,
			`img_url`,
			`create_time`,
			`modify_time`,
			`creator`,
			`modifier`)
		values(
			#{merchantId},
			#{ikey},
			#{type},
			#{name},
			#{imgUrl},
			#{createTime},
			#{modifyTime},
			#{creator},
			#{modifier})
	</insert>
	 
	<update id="update" parameterType="com.fengdu.entity.TImageEntity">
		update t_image 
		<set>
			<if test="ikey != null">`ikey` = #{ikey}, </if>
			<if test="type != null">`type` = #{type}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="imgUrl != null">`img_url` = #{imgUrl}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="modifyTime != null">`modify_time` = #{modifyTime}, </if>
			<if test="creator != null">`creator` = #{creator}, </if>
			<if test="modifier != null">`modifier` = #{modifier}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_image where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_image where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>